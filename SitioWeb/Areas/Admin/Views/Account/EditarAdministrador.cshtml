@model Modelos.ViewModels.Usuario.EditarUsuarioSistemaViewModel

@{
    ViewData["Title"] = "Usuarios";
}

<div class="preloader">
    <img src="~/ContentCliente/assets/images/loader.png" class="preloader__image" alt="">
</div><!-- /.preloader -->

<div class="container-fluid mt-2 bg-white mt-3">
    <div class="row mb-2">
        <div class="col-6">
            <input type="hidden" asp-for="Correo" id="correo" />
        </div>
    </div>

</div>

<!-- /.card-header -->
<div class="card-body">
    @if (User.IsInRole("SuperAdmin"))
    {
        <h5>Bloqueado</h5>
        <div class="form-group">
            <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success">
                <input type="checkbox" class="custom-control-input" id="customSwitch3" asp-for="Activa">
                <label class="custom-control-label" for="customSwitch3"> </label>
            </div>
        </div>
    }

    <form id="EditarAdministradorForm">

        <div class="row">

            <!-- text input -->
            <div class="col-md-6">
                <div class="form-group">
                    <label>Nombre</label>
                    <input asp-for="Nombre" id="nombre" class="form-control input-sm" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label>Apellidos</label>
                    <input asp-for="Apellidos" id="apellidos" class="form-control input-sm" />
                    <span asp-validation-for="Apellidos" class="text-danger"></span>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="form-group">
                    <label>Identificación</label>
                    <input asp-for="Identificacion" id="identificacion" class="form-control input-sm" />
                    <span asp-validation-for="Identificacion" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 text-center">
                <div class="card">
                    <div class="align-items-center m-2">

                        <a href="/Admin/Account/Administradores"
                           class="btn btn-warning" data-dismiss="modal"><i class="fas fa-backward"> </i> Volver </a>
                        <a type="button" class="btn btn-primary" href="/Admin/Account/EditarAdministrador/@Model.Correo"><i class="fas fa-upload"></i>  Reestablecer</a>
                        <button type="submit" id="SubmitBtn" class="btn btn-success"><i class="fas fa-check-square"> Guardar</i> </button>

                        <div class="alert alert-danger alert-dismissible mt-2" id="muestraError">
                            <h5><i class="icon fas fa-ban"></i> Ha ocurrido un error </h5>
                            <p id="mensajeError"> </p>
                        </div>
                        <div class="alert alert-warning alert-dismissible mt-2" id="muestraAdvertencia">
                            <h5><i class="icon fas fa-exclamation-triangle"></i> Atención!</h5>
                            <p id="mensajeAdvertencia"> </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </form>
</div>
<!-- /.card-body -->

@section scripts {
 
        <script src="~/js/logicaSitio/Usuarios/editarUsuario.js"></script>
 
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}