@model Modelos.ViewModels.Clientes.EditarCompradorViewModel

@{
    /*Si posee cedula juridica, entonces muestra los datos correspondientes*/
    var poseePersona = Model.PoseePersonaJuridica;

    var display = string.Empty;

    if (poseePersona)
    {
        display = "normal";
    }
    else
    {
        display = "none";
    }

}

<div class="preloader">
    <img src="~/ContentCliente/assets/images/loader.png" class="preloader__image" alt="">
</div><!-- /.preloader -->
<!-- /.card-header -->
<div class="card-body">

    <form id="EditarCompradorForm">

        <input type="hidden" asp-for="@Model.IdPersona" id="idPersona" />

        <div class="row">
            <div class="col-sm-6">
                <div class="form-group" data-select2-id="119">
                    <label>Tipo de Persona</label>
                    <select asp-for="TipoPersonaId" id="tipoPersona" asp-items="Model.TipoPersonas" class="form-control"></select>
                    <span asp-validation-for="TipoPersonaId" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row" id="datosPersonaJuridica" style="display:@display">
            <div class="col-sm-6">
                <!-- text input -->
                <div class="form-group">
                    <label> Nombre Entidad </label>
                    <input asp-for="NombreEntidad" id="nombreEntidad" class="form-control input-sm" />
                    <span id="ErrorNombreEntidad" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label> Razón Social</label>
                    <input asp-for="RazonSocial" id="razonSocial" class="form-control input-sm" />
                    <span id="ErrorRazonSocial" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-6">
                <!-- text input -->
                <div class="form-group">
                    <label> Cédula </label>
                    <input asp-for="Cedula" id="cedulaJuridica" class="form-control input-sm" />
                    <span id="ErrorCedulaJuridica" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label> Correo </label>
                    <input asp-for="Correo" id="correoJuridica" class="form-control input-sm" />
                    <span id="ErrorCorreoJuridica" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row" id="tituloRep" style="display:@display;"><h3>Datos del representante legal</h3></div>

        <div class="row">
            <div class="col-sm-6">
                <!-- text input -->
                <div class="form-group">
                    <label>Nombre</label>
                    <input asp-for="Nombre" id="nombre" class="form-control input-sm" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label>Identificación</label>
                    <input asp-for="Identificacion" id="identificacion" class="form-control input-sm" />
                    <span asp-validation-for="Identificacion" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <!-- text input -->
                <div class="form-group">
                    <label>Primer Apellido </label>
                    <input asp-for="Apellido1" id="apellido1" class="form-control input-sm" />
                    <span asp-validation-for="Apellido1" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label>Segundo Apellido</label>
                    <input asp-for="Apellido2" id="apellido2" class="form-control input-sm" />
                    <span asp-validation-for="Apellido2" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label>Tel. Móvil</label>
                    <input asp-for="TelefonoMovil" id="telMovil" class="form-control input-sm" />
                    <span asp-validation-for="TelefonoMovil" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label>Tel. Oficina</label>
                    <input asp-for="TelefonoOficina" id="telOficina" class="form-control input-sm" />
                    <span asp-validation-for="TelefonoOficina" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label>Tel. Casa</label>
                    <input asp-for="TelefonoCasa" id="telCasa" class="form-control input-sm" />
                    <span asp-validation-for="TelefonoCasa" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label>Correo electrónico</label>
                    <input asp-for="CorreoElectronico" id="correo" class="form-control input-sm" />
                    <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label> Provincias </label>
                    <select asp-for="ProvinciaId" asp-items="Model.Provincias" id="idProvincia" name="provincias" class="form-control"></select>
                    <span asp-validation-for="ProvinciaId" id="ErrorProvincias" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label> Cantones </label>
                    <select asp-for="CantonId" asp-items="Model.Cantones" id="idCanton" name="cantones" class="form-control"></select>
                    <span asp-validation-for="CantonId" id="ErrorCantones" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label>Distritos </label>
                    <select asp-for="DistritoId" asp-items="Model.Distritos" id="idDistrito" name="distritos" class="form-control"></select>
                    <span asp-validation-for="DistritoId" id="ErrorDistritos" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <label> Dirección exacta </label>
                    <textarea asp-for="DireccionExacta" id="direccion" class="form-control"></textarea>
                    <span asp-validation-for="DireccionExacta" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 text-center">
                <div class="card">
                    <div class="align-items-center m-2">
                        <a href="/Admin/Comprador/VerRegistroComprador/@Model.IdComprador"
                           class="btn btn-warning" id="btnCancelarRegistroComprador" data-dismiss="modal"><i class="fas fa-backward"> </i> Volver </a>
                        <a type="button" class="btn btn-primary" href="/Admin/Comprador/Editar/@Model.IdComprador"><i class="fas fa-upload"></i>  Reestablecer</a>
                        <button type="submit" id="SubmitBtn" class="btn btn-success"><i class="fas fa-check-square"> Guardar   </i></button>
                        <div class="alert alert-danger alert-dismissible mt-2" id="muestraError">
                            <h5><i class="icon fas fa-ban"></i> Ha ocurrido un error </h5>
                            <p id="mensajeError"> </p>
                        </div>
                        <div class="alert alert-warning alert-dismissible mt-2" id="muestraAdvertencia">

                            <h5><i class="icon fas fa-exclamation-triangle"></i> Atención!</h5>
                            <p id="mensajeAdvertencia"> </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </form>
</div>
<!-- /.card-body -->

@section scripts {
  
        <script src="~/js/logicaSitio/Clientes/EditarComprador.js"></script>
    

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
