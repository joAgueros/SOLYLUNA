
@model List<Modelos.Entidades.Imagen>

@{
    if (Model.Count == 0)
    {
        <div class="row text-center mt-3">
            <div class="col-md-12">
                <h4> <i class="fa fa-file-image"> No hay fotografías </i>  </h4>
            </div>
        </div>
    }
    else
    {
        <div class="col-12 mt-3">
            <div class="card card-primary">
                <div class="card-header">
                    <div class="card-title">
                        Galería
                    </div>
                </div>
                <div class="card-body">

                    <div class="row">

                        @foreach (var imagen in Model)
                        {
                            <div class="col-sm-2 text-center">
                                <a href="@imagen.Ruta" data-toggle="lightbox" data-title="@imagen.Titulo" data-gallery="gallery">
                                    <img src="@imagen.Ruta" class="img-fluid mb-2 img-responsive fit-image" style="height: 200px; width:250px;" alt="@imagen.Titulo">
                                    <div class="btn btn-danger">
                                        <a onclick=EliminarImagen(@imagen.IdImagen) style="text-decoration:none; cursor:pointer"><i class="fas fa-trash-alt text-white"></i> <span class="text-white"> Eliminar</span></a>
                                    </div>
                                </a>
                            </div>
                        }

                    </div>

                </div>
            </div>
        </div>
    }
}