@model Modelos.ViewModels.Propiedades.EditarPropiedadViewModel


<div class="preloader">
    <img src="~/ContentCliente/assets/images/favicons/logoico-02.png" class="preloader__image" alt="">
</div><!-- /.preloader -->

<div class="col-md-12 mt-4">
